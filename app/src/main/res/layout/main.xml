<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:qwerjk="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/triangles_tiled">

    <com.qwerjk.better_text.MagicTextView
        android:textSize="78sp"
        android:textColor="#ff333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star"
        android:textStyle="bold"
        android:padding="10dp"
        qwerjk:foreground="@drawable/fake_luxury_tiled"
        qwerjk:innerShadowDy="2dp"
        qwerjk:innerShadowColor="#FF000000"
        qwerjk:innerShadowRadius="1dp"
        qwerjk:outerShadowDy="3dp"
        qwerjk:outerShadowColor="#FF0088ff"
        qwerjk:outerShadowRadius="10dp"
        qwerjk:strokeColor="#FFff0000"
        qwerjk:strokeJoinStyle="miter"
        qwerjk:strokeWidth="5dp"
        android:text="Magic"
		android:drawableStart="@android:drawable/btn_star" />

	<ScrollView xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			tools:context="com.example.borderimagelibs.MainActivity" >

			<ImageView
				android:id="@+id/imv1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:src="@drawable/ic_launcher" />

			<ImageView
				android:id="@+id/imv2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/imv1"
				android:layout_centerHorizontal="true"
				android:src="@drawable/ic_launcher" />

			<ImageView
				android:id="@+id/imv3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/imv2"
				android:layout_centerHorizontal="true"
				android:src="@drawable/text" />

			<ImageView
				android:id="@+id/imv4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/imv3"
				android:layout_centerHorizontal="true"
				android:src="@drawable/text" />
		</RelativeLayout>
	</ScrollView>
</LinearLayout>